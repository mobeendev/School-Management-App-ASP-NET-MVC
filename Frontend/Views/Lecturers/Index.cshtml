@model IEnumerable<SchoolManagementApp.Data.Lecturer>

@{
    ViewData["Title"] = "Index";
}

<h1>Lecturers</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salary)
            </th>
            <th>
                Qualification
            </th>
            <th>
                Experience
            </th>
            <th>
                Teaching Hours
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @item.ToString()
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Salary)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Qualification)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.YearsOfExperience)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TeachingHoursPerWeek)
                </td>
                <td>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <button data-id="@item.Id" class="btn btn-danger deleteBtn" type="button">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<form asp-action="Delete" id="lecturerDeleteForm">
    <input type="hidden" id="lecturerid" name="Id" />
</form>

<!-- Include the modern delete confirmation modal -->
<partial name="_DeleteConfirmationModal" />

@section Scripts {
    <script>
        $(function () {
            $('.table').DataTable();

            $('.deleteBtn').click(function (e) {
                var btn = $(this);
                var id = btn.data("id");
                var lecturerName = btn.closest('tr').find('td:nth-child(2)').text().trim();
                var lecturerRole = 'Lecturer';
                
                window.deleteConfirmationModal.show({
                    title: 'Delete User',
                    text: 'Are you sure you want to permanently delete ' + lecturerName + '?',
                    details: `<strong>Email:</strong> N/A<br><strong>Role:</strong> ${lecturerRole}`,
                    onConfirm: function() {
                        $('#lecturerid').val(id);
                        $('#lecturerDeleteForm').submit();
                    }
                });
            });
        });
    </script>
}
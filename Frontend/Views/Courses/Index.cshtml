@model IEnumerable<SchoolManagementApp.Data.Course>

@{
    ViewData["Title"] = "Courses Listing";
}

<h1>Courses</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Credits)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Credits)
                </td>
                <td>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <button data-id="@item.Id" class="btn btn-danger deleteBtn" type="button">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<form asp-action="Delete" id="courseDeleteForm">
    <input type="hidden" id="courseid" name="id" />
</form>

<!-- Include the modern delete confirmation modal -->
<partial name="_DeleteConfirmationModal" />

@section Scripts {
    <script>
        $(function () {
            $('.table').DataTable();

            $('.deleteBtn').click(function (e) {
                var btn = $(this);
                var id = btn.data("id");
                var courseName = btn.closest('tr').find('td:first').text().trim();
                var courseCode = btn.closest('tr').find('td:nth-child(2)').text().trim();
                
                window.deleteConfirmationModal.show({
                    title: 'Delete Course',
                    text: 'Are you sure you want to permanently delete this course?',
                    details: `<strong>Course:</strong> ${courseName}<br><strong>Code:</strong> ${courseCode}`,
                    onConfirm: function() {
                        $('#courseid').val(id);
                        $('#courseDeleteForm').submit();
                    }
                });
            });
        });
    </script>
}
@model IEnumerable<SchoolManagementApp.Data.Student>

@{
    ViewData["Title"] = "Index";
}

<h1>Students</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfBirth)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfBirth)
                </td>
                <td>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <button data-id="@item.Id" class="btn btn-danger deleteBtn" type="button">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<form asp-action="Delete" id="studentDeleteForm">
    <input type="hidden" id="studentid" name="Id" />
</form>

<!-- Include the modern delete confirmation modal -->
<partial name="_DeleteConfirmationModal" />

@section Scripts {
    <script>
        $(function () {
            $('.table').DataTable();

            $('.deleteBtn').click(function (e) {
                var btn = $(this);
                var id = btn.data("id");
                var firstName = btn.closest('tr').find('td:first').text().trim();
                var lastName = btn.closest('tr').find('td:nth-child(2)').text().trim();
                var studentName = firstName + ' ' + lastName;
                
                window.deleteConfirmationModal.show({
                    title: 'Delete User',
                    text: 'Are you sure you want to permanently delete ' + studentName + '?',
                    details: `<strong>Email:</strong> N/A<br><strong>Role:</strong> Student`,
                    onConfirm: function() {
                        $('#studentid').val(id);
                        $('#studentDeleteForm').submit();
                    }
                });
            });
        });
    </script>
}